<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Bouquet"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/yankes_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:buttonTint="@color/succes"
        app:layout_constraintEnd_toStartOf="@id/deleteKategori"
        app:layout_constraintTop_toTopOf="@id/kategori"
        app:layout_constraintBottom_toBottomOf="@id/kategori"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/deleteKategori"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/kategori"
        app:layout_constraintBottom_toBottomOf="@id/kategori" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toBottomOf="@id/kategori"
        android:background="@color/textfield" />

</androidx.constraintlayout.widget.ConstraintLayout>
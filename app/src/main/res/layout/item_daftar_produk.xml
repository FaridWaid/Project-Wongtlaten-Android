<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDaftarProduk"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageProduk"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/acrylic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layoutText"
            app:layout_constraintBottom_toBottomOf="@id/layoutText"
            app:riv_corner_radius="5dp" />

        <LinearLayout
            android:id="@+id/layoutText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/imageProduk"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/nameProduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Bouquet Type 1"
                android:textColor="@color/cool_blue"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Rp. 75.000"
                android:textColor="@color/yankes_blue"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Stock: "
                    android:textColor="@color/textfield"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/stockProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/yankes_blue"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_bold"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnUbahHarga"
            android:layout_width="143dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_border_button3"
            android:text="Ubah Harga"
            android:textAlignment="center"
            android:textColor="@color/textfield"
            android:fontFamily="@font/poppins_bold"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/imageProduk"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnUbahStock"
            android:layout_width="143dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/rounded_border_button3"
            android:text="Ubah Stok"
            android:textAlignment="center"
            android:textColor="@color/textfield"
            android:fontFamily="@font/poppins_bold"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@id/imageProduk"
            app:layout_constraintStart_toEndOf="@id/btnUbahHarga"
            app:layout_constraintEnd_toStartOf="@id/optionButton"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/optionButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnUbahStock"
            app:layout_constraintBottom_toBottomOf="@id/btnUbahStock"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
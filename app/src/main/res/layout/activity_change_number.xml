<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChangeNumberActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/prevButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/arrow_back"
                android:tint="@color/primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textNomorTelepon"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginTop="16dp"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/cool_blue"
                android:text="NOMOR TELEPON?"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/prevButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/yankes_blue"
                android:text="Masukkan nomor telepon anda yang baru untuk di daftarkan pada akun. (Menggunakan format +62)"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@id/textNomorTelepon"/>

            <LinearLayout
                android:id="@+id/editTextContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="left"
                app:layout_constraintTop_toBottomOf="@id/textDescription">

                <TextView
                    android:id="@+id/textBelumPunyaAkun"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="+62"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/yankes_blue"
                    android:gravity="center" />

                <EditText
                    android:id="@+id/etNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:lines="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColorHint="@color/textfield"
                    android:backgroundTint="@color/primary"
                    android:hint="Masukkan nomor disini"
                    android:textColor="@color/yankes_blue"
                    android:inputType="number"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/rounded_border_button"
                android:text="SUBMIT"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
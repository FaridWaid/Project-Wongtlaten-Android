<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".modules.pembeli.customize.PembelianBerhasilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLanjutBelanja">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/resetPasswordImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:src="@drawable/success"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/cool_blue"
                android:text="Berhasil!"
                android:fontFamily="@font/poppins_bold"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/resetPasswordImage" />

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/yankes_blue"
                android:text="Anda berhasil melakukan transaksi pembelian, pemesanan anda akan segera kami kirimkan."
                android:fontFamily="@font/poppins_semibold"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/textHeading" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnLanjutBelanja"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_border_button"
        android:text="LANJUT BELANJA"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>